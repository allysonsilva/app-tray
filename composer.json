{
    "$schema": "https://getcomposer.org/schema.json",
    "repositories": [
        {
            "type": "path",
            "url": "app/Domain/Account",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "app/Domain/Sale",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "app/Domain/Seller",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "app/Domain/Shared",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.2",
        "app/account": "@dev",
        "app/sale": "@dev",
        "app/seller": "@dev",
        "app/shared": "@dev",
        "laravel/framework": "^12.0",
        "laravel/octane": "^2.12",
        "laravel/prompts": "^0.3.6",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^10.19",
        "laravel/telescope": "^5.11",
        "laravel/tinker": "^2.10.1",
        "owen-it/laravel-auditing": "^14.0",
        "sentry/sentry-laravel": "^4.16",
        "spatie/laravel-data": "^4.17",
        "spatie/laravel-health": "^1.34",
        "symfony/http-client": "^7.3",
        "typesense/typesense-php": "^5.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "nunomaduro/phpinsights": "^2.13",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpmd/phpmd": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Support/Helpers/General.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "populate-db": [
            "php artisan config:clear --env=testing",
            "php artisan config:cache --env=testing",
            "php artisan db:wipe --force --env=testing",
            "php artisan migrate:install --env=testing",
            "php artisan migrate --env=testing",
            "php artisan db:seed --class=\"\\\\Tests\\\\Support\\\\PopulateDBSeeder\" --env=testing"
        ],
        "tests": [
            "php artisan optimize --env=testing @no_additional_args",
            "php artisan test --env=testing --ansi @additional_args --exclude-group migration",
            "php artisan optimize:clear --env=testing @no_additional_args"
        ],
        "tests-ci": [
            "php artisan test --env=testing --group=migration @no_additional_args",
            "@populate-db @no_additional_args",
            "@tests --compact --coverage"
        ],
        "tests-parallel": [
            "php artisan optimize:clear --env=testing @no_additional_args",
            "php artisan test --env=testing @additional_args --parallel --exclude-group migration,arch"
        ],
        "tests-only": [
            "php artisan test --env=testing --ansi --exclude-group=migration --exclude-group=arch"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
