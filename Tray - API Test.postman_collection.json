				{
					"name": "Logout",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let statusCode = pm.response.code;",
									"",
									"if (statusCode >= 200 && statusCode < 300) {",
									"    // Se o status for 2xx, limpa a variável",
									"    pm.collectionVariables.set(\"userToken\", \"\");",
									"",
									"    console.warn(\"Status:\", statusCode, \"- Token resetado\");",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
