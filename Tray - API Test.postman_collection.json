				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Tenta interpretar o JSON da resposta",
									"let response = pm.response.json();",
									"",
									"// Se existir o campo \"token\"",
									"if (response.token) {",
									"    // Salva em variável de ambiente chamada \"userToken\"",
									"    // salva na variável de ambiente ativa.",
									"    // pm.environment.set(\"userToken\", response.token);",
									"",
									"    // salva só dentro da coleção onde a requisição está.",
									"    pm.collectionVariables.set(\"userToken\", response.token);",
									"",
									"    // (Opcional) também pode salvar em variável global",
									"    // pm.globals.set(\"userToken\", response.token);",
									"",
									"    console.log(\"userToken salvo:\", response.token);",
									"} else {",
									"    // console.warn(\"Token não encontrado na resposta!\");",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"{{userPassword}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{apiUrl}}/seller/login",
							"host": [
